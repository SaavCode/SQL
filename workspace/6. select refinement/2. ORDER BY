/*sort the results*/

SELECT author_lname FROM books;
 
SELECT author_lname FROM books ORDER BY author_lname;/*order by the last name*/
 

SELECT author_lname FROM books ORDER BY author_lname DESC;/*descending order*/
 
 
SELECT released_year FROM books ORDER BY released_year DESC;/*descending year*/
 
SELECT released_year FROM books ORDER BY released_year ASC;/*ascending order*/
 
SELECT title, released_year, pages FROM books ORDER BY released_year;
 
SELECT title, author_fname, author_lname /*orders by author_fname*/
FROM books ORDER BY 2;
 
SELECT title, author_fname, author_lname /orders by author_lname**/
FROM books ORDER BY 3;
 
SELECT title, author_fname, author_lname /*orders by title in descending*/
FROM books ORDER BY 1 DESC;
 
SELECT author_fname, author_lname FROM books /*ordering by two different columns*/
ORDER BY author_lname, author_fname;